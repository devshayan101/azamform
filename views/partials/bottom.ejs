            if(hours < 10) {
              hours = '0' + hours;
            }

            let minutes = now.getMinutes();
            if(minutes < 10) {
              minutes = '0' + minutes;
            }

            let seconds = now.getSeconds();
            if(seconds < 10) {
              seconds = '0' + seconds;
            }

            let milliseconds = now.getMilliseconds();
            if(milliseconds < 100) {
              milliseconds = '0' + milliseconds; 
            }

            return `${date}${hours}${minutes}${seconds}${milliseconds}`;

