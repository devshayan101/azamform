      <script>

                // Get form elements
        const form = document.querySelector('form');
        const nameInput = document.getElementById('name');
        const phoneInput = document.getElementById('phone');
        const addressInput = document.getElementById('address');
        const emailInput = document.getElementById('email');
        const amountInput = document.getElementById('amount');

        // Form submit event listener
        form.addEventListener('submit', e => {

          // Validate name
          if(nameInput.value.trim().length < 3) {
            e.preventDefault();
            nameInput.classList.add('is-invalid');
          }

          // Validate phone
          if(!/^\d{10}$/.test(phoneInput.value)) {  
            e.preventDefault();
            phoneInput.classList.add('is-invalid');
          }

          // Validate address
          if(addressInput.value.trim().length < 10) {
            e.preventDefault();
            addressInput.classList.add('is-invalid');
          }
          
          // Validate email
          if(!/^\S+@\S+\.\S+$/.test(emailInput.value)) {
            e.preventDefault();
            emailInput.classList.add('is-invalid');
          }
          //Validate amount less than Rs.7000
          if(!/^\d{1,4}(\.\d{1,2})?$/.test(amountInput.value)) {
            e.preventDefault();
            amountInput.classList.add('is-invalid');
          }
        });

        // Remove error on keyup
        nameInput.addEventListener('keyup', () => {
          nameInput.classList.remove('is-invalid');
        })

        // Similarly for other inputs
        phoneInput.addEventListener('keyup', () => {
          phoneInput.classList.remove('is-invalid'); 
        })

                // Add event listeners to inputs
        nameInput.addEventListener('input', checkValidation);
        phoneInput.addEventListener('input', checkValidation);
        addressInput.addEventListener('input', checkValidation);
        emailInput.addEventListener('input', checkValidation);
        amountInput.addEventListener('input', checkValidation);

        function checkValidation(e) {

          // Get input that triggered event
          const input = e.target;

          // Remove existing errors
          input.classList.remove('is-invalid');

          switch(input.id) {
            
            case 'name': 
              if(input.value.trim().length < 3) {
                input.classList.add('is-invalid');
              }
              break;

            case 'phone':
              if(!/^\d{10}$/.test(input.value)) {
                input.classList.add('is-invalid');
              }  
              break;
            
            case 'address':
              if(input.value.trim().length < 10) {
                input.classList.add('is-invalid');
              }
              break;

            case 'email':
              if(!/^\S+@\S+\.\S+$/.test(input.value)) {
                input.classList.add('is-invalid'); 
              }
              break;
            case 'amount':
            if(!/^\d{1,4}(\.\d{1,2})?$/.test(input.value)) {
              input.classList.add('is-invalid'); 
            }
            break;
          }

        }


      </script>

